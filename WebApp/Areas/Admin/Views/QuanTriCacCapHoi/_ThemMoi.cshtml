

@{
    ViewBag.Title = "_ThemMoi";
    Layout = null;
}
<input type="hidden" value="" id="AnhDaiDienTM" />
<div class="row">
    <div class="panel" style="margin-top: 10px !important;">
        <div class="panel-body">
            <div style="padding: 10px;">
                <div class="row">
                    <div class="col-lg-4 col-md-4 col-sm-6  mb-3">
                        <div class="form-group">
                            <label>Mô tả<span class="text-danger">(*)</span></label>
                            <input type="text" class="form-control" placeholder="" id="txtMoTaThemMoi" value="">
                        </div>
                    </div>
                    <div class="col-lg-4 col-md-4 col-sm-6  mb-3">
                        <div class="form-group">
                            <label>Url<span class="text-danger">(*)</span></label>
                            <input type="text" class="form-control" placeholder="" id="txtUrlThemMoi" value="">
                        </div>
                    </div>
                    <div class="col-lg-4 col-md-4 col-sm-6  mb-3">
                        <div class="form-group">
                            <label>STT<span class="text-danger">(*)</span></label>
                            <input type="number" class="form-control" placeholder="" id="txtSTTThemMoi" value="">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    function ThemMoiLuu() {
        if ($("#txtMoTaThemMoi").val() == "") {
            ToastMessage("Lỗi", "Không được để trống mô tả", "error");
            return;
        }
        if ($("#txtUrlThemMoi").val() == "") {
            ToastMessage("Lỗi", "Không được để trống url", "error");
            return;
        }
        if ($("#txtSTTThemMoi").val() == "") {
            ToastMessage("Lỗi", "Không được để trống STT", "error");
            return;
        }
        Swal.fire({
            title: '',
            text: "Chắc chắn lưu liên kết giới thiệu?",
            icon: 'question',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Chắc chắn',
            cancelButtonText: 'Thoát'
        }).then((result) => {
            if (result.isConfirmed) {
                loading();
                var requestModel = {
                    MoTa: $("#txtMoTaThemMoi").val(),
                    Url: $("#txtUrlThemMoi").val(),
                    STT: $("#txtSTTThemMoi").val(),
                }

                $.post("/Admin/QuanTriCacCapHoi/ThemMoi", { "requestModel": requestModel }, function (data) {
                    if (data.icon == "success") {
                        Message('', data.message, data.icon);
                        $("#ModelThemMoi").modal("hide");
                    }
                    else {
                        Message('', data.message, data.icon);
                    }
                    table.ajax.reload(null, false);
                    offLoading();
                });
            }
        })
    }


</script>