<div class="modal fade show" id="ModelThemMoi" data-bs-keyboard="false" data-bs-backdrop="static">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="nv-modal-header">
                <div class="nv-modal-title">Thêm mới Audio</div>
                <span class="nv-modal-close  btn-close-modal"><i class="fal fa-times-circle"></i></span>
            </div>
            <div class="modal-body" id="DataModelThemMoi">

            </div>
            <div class="nv-modal-footer">
                <button type="button" class="btn btn-outline-primary waves-effect waves-light" onclick="ThemMoiLuu(0)"><i class="ri-save-line">Lưu</i></button>
                <a href="javascript:void(0);" class="btn btn-outline-danger waves-effect waves-light" data-bs-dismiss="modal"><i class="ri-close-line me-1 align-middle"></i> Đóng</a>
            </div>
        </div>
    </div>
</div>

<div class="modal fade show" id="ModelSua" data-bs-keyboard="false" data-bs-backdrop="static">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="fullscreeexampleModalLabel">Sửa Audio</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body" id="DataModelSua">

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-primary waves-effect waves-light" onclick="SuaLuu(0)"><i class="ri-save-line">Lưu</i></button>
                <a href="javascript:void(0);" class="btn btn-outline-danger waves-effect waves-light" data-bs-dismiss="modal"><i class="ri-close-line me-1 align-middle"></i> Đóng</a>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script>
        $(document).ready(function () {
            GetData();
        });

        $('#jstree-treeChuyenMuc').jstree({
            core: {
                data: {
                    url: '/Admin/Common/TreeChuyenMuc',
                    type: "POST"
                }
            },
            types: {
                "folder": {
                    "icon": "ri-file-text-line"
                },
                "default": {
                    "icon": "ri-file-text-line"
                }
            },
            plugins: ["search", "themes", "types"],
        }).on('open_node.jstree', function (e, data) {
            data.instance.set_icon(data.node, "ri-file-text-line");
        }).on('close_node.jstree', function (e, data) { data.instance.set_icon(data.node, "ri-file-text-line"); });

        var table = null;
        $("#jstree-treeChuyenMuc").bind("changed.jstree", function (e, data) {
            debugger;
            var Json = JSON.parse(data.node.id);
            CategoryID = Json.id;
            table.ajax.reload();
        });
        var CategoryID = null;

        function GetData() {

            table = $.fn.initDataTable('#DanhSachAudio', {
                serverSide: true,
                searching: false,
                lengthMenu: [50],
                scrollX: true,
                scrollY: true,
                columnDefs: [{
                    targets: [1, 2, 3, 4, 5], // your case first column
                    className: "text-center",
                },
                {
                    render: function (data, type, full, meta) {
                        return "<div class='text-wrap'>" + data + "</div>";
                    },
                    targets: 0
                }
                ],
                fixedHeader: true,
                fixedColumns: {
                    left: 0,
                    right: 1
                },
                preDrawCallback: function () {
                    loading()
                },
                columns: [
                    { "data": "MoTa", title: "Mô tả" },
                    {
                        "data": "Image", "className": 'dt-body-center', title: "Ảnh", "render": function (data) {
                            if (data != null) {
                                return `<img src="${data}" width="50" height="50"/>`;
                            }
                            return "";
                        }
                    },
                    {
                        "data": "IsHienThi", "className": 'dt-body-center', title: "Hiển thị", "render": function (data) {
                            if (data == true) {
                                return `<input class="form-check-input" type="checkbox" checked="">`;
                            }
                            return `<input class="form-check-input" type="checkbox">`;
                        }
                    },
                    { "data": "UserName", title: "Người tạo" },
                    {
                        "data": "NgayDang", "className": 'dt-body-center', title: "Ngày đăng", "render": function (data) {
                            if (data != null) {
                                return moment(data).format("DD/MM/YYYY");
                            }
                            return "";
                        }
                    },
                    {
                        "data": "Id", "className": 'dt-body-center', title: `<a class="btn btn-outline-primary waves-effect waves-light btn-xs" href="#" onclick="ThemMoi()" title="Thêm mới"><i class="ri-add-line"></i></a>`, "render": function (data) {
                            return `<a class="btn btn-outline-primary waves-effect waves-light btn-xs" onclick="CapNhatAudio(${data})" title="Cập nhật Audio"><i class="ri-edit-2-line"></i></a><a class="btn btn-outline-warning waves-effect waves-light btn-xs" title="Xóa Audio" onclick="Xoa(${data})"><i class="ri-delete-bin-line"></i></a>`;
                        }
                    },
                ],
                ajax: {
                    url: "/Admin/QuanLyAudio/DanhSach",
                    type: "post",
                    data: (params) => {
                        params.MoTa = $("#txtMoTa").val();
                        params.CategoryID = CategoryID;
                    }
                },
                drawCallback: function () {
                    offLoading();
                },
                initComplete: function (dt) {
                    //offloading();
                    if (dt.type == "error") {
                        showErrorToast("Thất bại", dt.message, dt.type);
                    }
                }
            });

        }

        var lstAnhAblum = [];

        function ThemMoi() {
            loading();
            $("#DataModelThemMoi").load("/Admin/QuanLyAudio/_ThemMoi", {}, function (data) {
                $("#ModelThemMoi").modal("show");
                offLoading();
            })
        }


        function CapNhatAudio(Id) {
            loading();
            $("#DataModelSua").load("/Admin/QuanLyAudio/_Sua", { "Id": Id }, function (data) {
                $("#ModelSua").modal("show");
                offLoading();
            })
        }

        function ThemMoiLuu() {
            if ($("#txtMoTaThemMoi").val() == "") {
                ToastMessage("Lỗi", "Không được để trống mô tả", "error");
                return;
            }
            if ($("#slChuyenMucChaThemMoi").val() == "") {
                ToastMessage("Lỗi", "Không được để trống chuyên đề", "error");
                return;
            }
            if (UrlAnhDaiDienThemMoi == "") {
                ToastMessage("Lỗi", "Không được để trống ảnh đại diện", "error");
                return;
            }
            if ($("#LinkAudioThemMoi").val() == "") {
                ToastMessage("Lỗi", "Không được để trống link Audio", "error");
                return;
            }
            if ($("#txtNgayDangThemMoi").val() == "") {
                ToastMessage("Lỗi", "Không được để trống ngày đăng", "error");
                return;
            }
            Swal.fire({
                title: '',
                text: "Chắc chắn lưu Audio?",
                icon: 'question',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Chắc chắn',
                cancelButtonText: 'Thoát'
            }).then((result) => {
                if (result.isConfirmed) {
                    loading();

                    var requestModel = {
                        IsHienThi: $("#ckHienThiTrangChuThemMoi").is(":checked") == true ? 1 : 0,
                        Image: UrlAnhDaiDienThemMoi,
                        MoTa: $("#txtMoTaThemMoi").val(),
                        CategoryID: $("#slChuyenMucChaThemMoi").val(),
                        IsYouTube: $("#slLoaiAudioThemMoi").val(),
                        Audio: $("#LinkAudioThemMoi").val(),
                        NgayDang: moment($("#txtNgayDangThemMoi").val(), "DD-MM-YYYY HH:mm").format('YYYY-MM-DD HH:mm'),
                        ChuThich: $("#txtChuThichThemMoi").val(),
                    }

                    $.post("/Admin/QuanLyAudio/ThemMoi", { "requestModel": requestModel }, function (data) {
                        if (data.icon == "success") {
                            Message('', data.message, data.icon);
                            $("#ModelThemMoi").modal("hide");
                        }
                        else {
                            Message('', data.message, data.icon);
                        }
                        table.ajax.reload(null, false);
                        offLoading();
                    });
                }
            })
        }

        function SuaLuu() {
            if ($("#txtMoTaSua").val() == "") {
                ToastMessage("Lỗi", "Không được để trống mô tả", "error");
                return;
            }
            if ($("#slChuyenMucChaSua").val() == "") {
                ToastMessage("Lỗi", "Không được để trống chuyên đề", "error");
                return;
            }
            if (UrlAnhDaiDienSua == "") {
                ToastMessage("Lỗi", "Không được để trống ảnh đại diện", "error");
                return;
            }
            if ($("#LinkAudioSua").val() == "") {
                ToastMessage("Lỗi", "Không được để trống link Audio", "error");
                return;
            }
            if ($("#txtNgayDangSua").val() == "") {
                ToastMessage("Lỗi", "Không được để trống ngày đăng", "error");
                return;
            }
            Swal.fire({
                title: '',
                text: "Chắc chắn lưu Audio?",
                icon: 'question',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Chắc chắn',
                cancelButtonText: 'Thoát'
            }).then((result) => {
                if (result.isConfirmed) {
                    loading();

                    var requestModel = {
                        IsHienThi: $("#ckHienThiTrangChuSua").is(":checked") == true ? 1 : 0,
                        Image: UrlAnhDaiDienSua,
                        MoTa: $("#txtMoTaSua").val(),
                        CategoryID: $("#slChuyenMucChaSua").val(),
                        IsYouTube: $("#slLoaiAudioSua").val(),
                        Audio: $("#LinkAudioSua").val(),
                        NgayDang: moment($("#txtNgayDangSua").val(), "DD-MM-YYYY HH:mm").format('YYYY-MM-DD HH:mm'),
                        ChuThich: $("#txtChuThichSua").val(),
                        Id: $("#IdAudio").val(),
                    }

                    $.post("/Admin/QuanLyAudio/CapNhat", { "requestModel": requestModel }, function (data) {
                        if (data.icon == "success") {
                            Message('', data.message, data.icon);
                            $("#ModelSua").modal("hide");
                        }
                        else {
                            Message('', data.message, data.icon);
                        }
                        table.ajax.reload(null, false);
                        offLoading();
                    });
                }
            })
        }


        function Xoa(Id) {

            Swal.fire({
                title: '',
                text: "Chắc chắn xóa Audio?",
                icon: 'question',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Chắc chắn',
                cancelButtonText: 'Thoát'
            }).then((result) => {
                if (result.isConfirmed) {
                    loading();

                    var requestModel = {
                        Id: Id
                    }

                    $.post("/Admin/QuanLyAudio/Xoa", { "requestModel": requestModel }, function (data) {
                        if (data.icon == "success") {
                            Message('', data.message, data.icon);
                        }
                        else {
                            Message('', data.message, data.icon);
                        }
                        table.ajax.reload(null, false);
                        offLoading();
                    });
                }
            })
        }

    </script>
}