}


<div class="container">
    <form id="form-create" method="POST" enctype="multipart/form-data">
        <div class="form-group">
            <div class="input_place">
                <lalbel>Title</lalbel>
                <input name="Title" type="text" id="txtMaTaiLieu" class="form-control mb-3">
            </div>
            <div class="input_place">
                <span class="hold">Nội dung</span>
                <textarea name="Content" type="text" id="txtTenTaiLieu" class="form-control mb-3" style="height:100px"></textarea>
            </div>
            <div class=" form-inline d-flex" style="margin-bottom:20px">
                <input type="text" name="picture" disabled id="picture" class=" form-control" />
                <input type="file" id="fileUpload" accept="image/*" name="fileUpload" style="display:none;" />
                <input type="button" id="btnUpload" value="UpLoad File" class=" btn btn-success" />
            </div>
            <img id="pictureUpload" width="200" />
            <input type="hidden" name="Status" value="1" />
        </div>
    </form>
</div>

<div class="modal-footer modal-footer-center">
    <input type="submit" name="btnSubmit" value="Xác nhận" onclick="btnSave_Onclick();" id="btSubmit" class="btn btn-outline-success" style="line-height: 10px">
    <button style="line-height: 10px" type="button" class="btn btn-outline-danger" id="Dong" data-dismiss="modal">Đóng</button>

</div>

<script>
    function ToastMessage(title, message, type) {
        toast({
            title: title,
            message: message,
            type: type,
            duration: 50000000
        });
    }
    $(function () {
        $('#btnUpload').click(function () {
            $('#fileUpload').trigger('click');
        });

        $('#fileUpload').change(function () {
            debugger
            if (window.FormData !== undefined) {
                var fileUpload = $('#fileUpload').get(0);
                var files = fileUpload.files;
                var formData = new FormData();
                formData.append('file', files[0]);
                $.ajax({
                    type: "POST",
                    url: '/Admin/TinTuc/ProsessUpload',
                    contentType: false,
                    processData: false,
                    data: formData,
                    success: function (urlImage) {
                        type: "GET",
                        $('#pictureUpload').attr('src', urlImage);
                        $('#picture').val(urlImage);
                        
                    },
                    Error: function (err) {
                        alert('Có lỗi khi upload : ' + err.status.text);
                    }
                });
            }
        });
    });

    function btnSave_Onclick() {
        var data = new FormData($('#form-create')[0]);
        debugger
        $.ajax({
            url: '/Admin/TinTuc/Create',
            type: "post",
            enctype: 'multipart/form-data',
            processData: false,
            contentType: false,
            cache: false,
            data: data,
            
            success: function (data) {
                debugger
                if (data.type == "success") {
                    /*$.fn.closeMainModal();*/
                    ToastMessage("Thông báo", "Lưu thành công", "success");
                    table.ajax.reload();
 
                }
                
                $("#modal").hide();
                location.reload();
            },
            error: function (errorThrown) {
                ToastMessage("Lỗi", "Có lỗi sảy ra", "error");
            }
        });
    }
    $("#Dong").on("click", function () {
        $("#modal").hide();
    })
</script>