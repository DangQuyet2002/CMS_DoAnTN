@section scripts {
    <script>
        $(document).ready(function () {
            GetData();
        });

        $('#jstree-treeChuyenMuc').jstree({
            core: {
                data: {
                    url: '/Admin/Common/TreeChuyenMuc',
                    type: "POST"
                }
            },
            types: {
                "folder": {
                    "icon": "ri-file-text-line"
                },
                "default": {
                    "icon": "ri-file-text-line"
                }
            },
            plugins: ["search", "themes", "types"],
        }).on('open_node.jstree', function (e, data) {
            data.instance.set_icon(data.node, "ri-file-text-line");
        }).on('close_node.jstree', function (e, data) { data.instance.set_icon(data.node, "ri-file-text-line"); });

        var table = null;
        $("#jstree-treeChuyenMuc").bind("changed.jstree", function (e, data) {
            debugger;
            var Json = JSON.parse(data.node.id);
            CategoryID = Json.id;
            table.ajax.reload();
        });
        var CategoryID = null;

        function GetData() {

            table = $.fn.initDataTable('#DanhSachAnh', {
                serverSide: true,
                searching: false,
                lengthMenu: [50],
                scrollX: true,
                scrollY: true,
                columnDefs: [{
                    targets: [1, 2, 3, 4, 5], // your case first column
                    className: "text-center",
                },
                {
                    render: function (data, type, full, meta) {
                        return "<div class='text-wrap'>" + data + "</div>";
                    },
                    targets: 0
                },
                ],
                fixedHeader: true,
                fixedColumns: {
                    left: 0,
                    right: 1
                },
                preDrawCallback: function () {
                    loading()
                },
                columns: [
                    { "data": "MoTa", title: "Mô tả" },
                    {
                        "data": "Image", "className": 'dt-body-center', title: "Ảnh", "render": function (data) {
                            if (data != null) {
                                return `<img src="${data}" width="50" height="50"/>`;
                            }
                            return "";
                        }
                    },
                    {
                        "data": "IsHienThi", "className": 'dt-body-center', title: "Hiển thị", "render": function (data) {
                            if (data == true) {
                                return `<input class="form-check-input" type="checkbox" checked="">`;
                            }
                            return `<input class="form-check-input" type="checkbox">`;
                        }
                    },
                    { "data": "UserName", title: "Người tạo" },
                    {
                        "data": "CreatedDate", "className": 'dt-body-center', title: "Ngày tạo", "render": function (data) {
                            if (data != null) {
                                return moment(data).format("DD/MM/YYYY");
                            }
                            return "";
                        }
                    },
                    {
                        "data": "Id", "className": 'dt-body-center', title: `<a class="btn btn-outline-primary waves-effect waves-light btn-xs" href="#" onclick="ThemMoi()" title="Thêm mới"><i class="ri-add-line"></i></a>`, "render": function (data) {
                            return `<a class="btn btn-outline-primary waves-effect waves-light btn-xs" onclick="CapNhatAlbum(${data})" title="Cập nhật album"><i class="ri-edit-2-line"></i></a>
                                                                                                                                        <a class="btn btn-outline-warning waves-effect waves-light btn-xs" title="Xóa album" onclick="Xoa(${data})"><i class="ri-delete-bin-line"></i></a>`;
                        }
                    },
                ],
                ajax: {
                    url: "/Admin/QuanTriAlbumAnh/DanhSach",
                    type: "post",
                    data: (params) => {
                        params.MoTa = $("#txtMoTa").val();
                        params.CategoryID = CategoryID;
                    }
                },
                drawCallback: function () {
                    offLoading();
                },
                initComplete: function (dt) {
                    //offloading();
                    if (dt.type == "error") {
                        showErrorToast("Thất bại", dt.message, dt.type);
                    }
                }
            });

        }

        var lstAnhAblum = [];

        function ThemMoi() {
            loading();
            $("#DataModelThemMoi").load("/Admin/QuanTriAlbumAnh/_ThemMoi", {}, function (data) {
                $("#ModelThemMoi").modal("show");
                offLoading();
            })
        }


        function CapNhatAlbum(Id) {
            loading();
            $("#DataModelSua").load("/Admin/QuanTriAlbumAnh/_ChiTiet", { "Id": Id }, function (data) {
                $("#ModelSua").modal("show");
                offLoading();
            })
        }

        function ThemAnhTrongAlbum() {
            loading();
            $("#DataModelAnhAlbum").load("/Admin/QuanTriAlbumAnh/_ThemAnhTrongAblum", {}, function (data) {
                $("#ModelAnhAlbum").modal("show");
                offLoading();
            })
        }

        function AnhAlbumLuu() {
            if ($("#NoiDungAnh").val() == "") {
                ToastMessage("Lỗi", "Không được để trống nội dung ảnh", "error");
                return;
            }
            var data = {
                Id: 0,
                FileImage: AnhAlbum,
                MoTa: $("#NoiDungAnh").val(),
                RowId: ([1e7] + -1e3 + -4e3 + -8e3 + -1e11).replace(/[018]/g, c => (c ^ crypto.getRandomValues(new Uint8Array(1))[0] & 15 >> c / 4).toString(16))
            }

            $(".DataViewAnhAlbum").empty();
            lstAnhAblum.push(data);
            if (lstAnhAblum.length > 0) {
                var StrHtml = "";
                [...lstAnhAblum].map((el, index) => {
                    StrHtml += ` <div class="col-lg-6" id="${el.RowId}">
                                                                                                                                    <div class="card border">
                                                                                                                                        <div class="card-body">
                                                                                                                                            <div class="d-sm-flex">
                                                                                                                                                <div class="flex-shrink-0">
                                                                                                                                                    <img src="${el.FileImage}" class="StyleImage" alt="" class="rounded-1">
                                                                                                                                                </div>
                                                                                                                                                <div class="flex-grow-1 ms-sm-4 mt-3 mt-sm-0">
                                                                                                                                                    <h6><a href="javascript:void(0);">${el.MoTa}</a><i class="ri-delete-bin-line  text-danger" onclick="XoaAnhAlbum('${el.RowId}')"></i></h6>
                                                                                                                                                </div>
                                                                                                                                            </div>
                                                                                                                                        </div>
                                                                                                                                    </div>
                                                                                                                                </div>`
                });
                $(".DataViewAnhAlbum").append(StrHtml);
                $("#ModelAnhAlbum").modal("hide");
            }
        }

        function XoaAnhAlbum(RowId) {
            debugger;
            var CheckAlbum = lstAnhAblum.findIndex(x => x.RowId === RowId);

            Swal.fire({
                title: '',
                text: "Chắc chắn xóa ảnh trong album?",
                icon: 'question',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Chắc chắn',
                cancelButtonText: 'Thoát'
            }).then((result) => {
                if (result.isConfirmed) {
                    loading();

                    var requestModel = {
                        ID: lstAnhAblum[CheckAlbum].Id
                    }

                    $.post("/Admin/QuanTriAlbumAnh/XoaChiTiet", { "requestModel": requestModel }, function (data) {
                        if (data.icon == "success") {
                            Message('', data.message, data.icon);
                        }
                        else {
                            Message('', data.message, data.icon);
                        }
                        $("#" + RowId).addClass("d-none");
                        offLoading();
                        lstAnhAblum = lstAnhAblum.filter(e => e.RowId != RowId);
                    });
                }
            })
        }

        function ThemMoiLuu() {
            if ($("#txtMoTaThemMoi").val() == "") {
                ToastMessage("Lỗi", "Không được để trống mô tả", "error");
                return;
            }
            if ($("#slChuyenMucChaThemMoi").val() == "") {
                ToastMessage("Lỗi", "Không được để trống chuyên đề", "error");
                return;
            }
            if (UrlAnhDaiDienThemMoi == "") {
                ToastMessage("Lỗi", "Không được để trống ảnh đại diện", "error");
                return;
            }
            if ($("#txtNgayPhatHanhTM").val() == "") {
                ToastMessage("Lỗi", "Không được để trống ngày phát hành", "error");
                return;
            }
            Swal.fire({
                title: '',
                text: "Chắc chắn lưu album ảnh?",
                icon: 'question',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Chắc chắn',
                cancelButtonText: 'Thoát'
            }).then((result) => {
                if (result.isConfirmed) {
                    loading();

                    var requestModel = {
                        IsHienThi: $("#ckHienThiSlideThemMoi").is(":checked") == true ? 1 : 0,
                        Image: UrlAnhDaiDienThemMoi,
                        MoTa: $("#txtMoTaThemMoi").val(),
                        CategoryID: $("#slChuyenMucChaThemMoi").val(),
                        DanhSachAnh: lstAnhAblum,
                        NgayPhatHanh: moment($("#txtNgayPhatHanhTM").val(), "DD-MM-YYYY HH:mm").format('YYYY-MM-DD HH:mm'),
                    }

                    $.post("/Admin/QuanTriAlbumAnh/ThemMoi", { "requestModel": requestModel }, function (data) {
                        if (data.icon == "success") {
                            Message('', data.message, data.icon);
                            $("#ModelThemMoi").modal("hide");
                        }
                        else {
                            Message('', data.message, data.icon);
                        }
                        table.ajax.reload(null, false);
                        offLoading();
                        lstAnhAblum = [];
                        UrlAnhDaiDienThemMoi = ""
                    });
                }
            })
        }


        function SuaLuu() {
            if ($("#txtMoTaSua").val() == "") {
                ToastMessage("Lỗi", "Không được để trống mô tả", "error");
                return;
            }
