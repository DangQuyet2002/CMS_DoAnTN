                return;
            }
            if (UrlAnhDaiDienSua == "") {
                ToastMessage("Lỗi", "Không được để trống ảnh đại diện", "error");
                return;
            }
            if ($("#txtNgayPhatHanhSua").val() == "") {
                ToastMessage("Lỗi", "Không được để trống ngày phát hành", "error");
                return;
            }
            Swal.fire({
                title: '',
                text: "Chắc chắn lưu album ảnh?",
                icon: 'question',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Chắc chắn',
                cancelButtonText: 'Thoát'
            }).then((result) => {
                if (result.isConfirmed) {
                    loading();

                    var requestModel = {
                        IsHienThi: $("#ckHienThiSlideSua").is(":checked") == true ? 1 : 0,
                        Image: UrlAnhDaiDienSua,
                        MoTa: $("#txtMoTaSua").val(),
                        CategoryID: $("#slChuyenMucChaSua").val(),
                        DanhSachAnh: lstAnhAblum,
                        Id: $("#IdAlbum").val(),
                        NgayPhatHanh: moment($("#txtNgayPhatHanhSua").val(), "DD-MM-YYYY HH:mm").format('YYYY-MM-DD HH:mm'),
                    }

                    $.post("/Admin/QuanTriAlbumAnh/CapNhat", { "requestModel": requestModel }, function (data) {
                        if (data.icon == "success") {
                            Message('', data.message, data.icon);
                            $("#ModelSua").modal("hide");
                        }
                        else {
                            Message('', data.message, data.icon);
                        }
                        table.ajax.reload(null, false);
                        offLoading();
                        lstAnhAblum = [];
                        UrlAnhDaiDienThemMoi = ""
                    });
                }
            })
        }


        function Xoa(Id) {

            Swal.fire({
                title: '',
                text: "Chắc chắn xóa album ảnh?",
                icon: 'question',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Chắc chắn',
                cancelButtonText: 'Thoát'
            }).then((result) => {
                if (result.isConfirmed) {
                    loading();

                    var requestModel = {
                        Id: Id
                    }

                    $.post("/Admin/QuanTriAlbumAnh/Xoa", { "requestModel": requestModel }, function (data) {
                        if (data.icon == "success") {
                            Message('', data.message, data.icon);
                        }
                        else {
                            Message('', data.message, data.icon);
                        }
                        table.ajax.reload(null, false);
                        offLoading();
                    });
                }
            })
        }
