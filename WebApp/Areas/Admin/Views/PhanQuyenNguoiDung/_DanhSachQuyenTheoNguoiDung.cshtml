@using Models;
@{
    Layout = null;
    var lstRole = ViewBag.lstRole as List<tbl_RoleModel>;
    var lstRoleUser = ViewBag.lstRoleUser as List<tbl_RoleModel>;
}

@if (lstRole != null)
{
    foreach (var item in lstRole)
    {
        <tr class=" RoleActive " id="RoleActive_@item.Id" onclick="LoadMenu(@item.Id)">
            <td class="fw-medium text-center"><input class="form-check-input" type="checkbox" onclick="ThemUserRole(@item.Id)" id="Role_@item.Id" @(lstRoleUser.Where(e => e.IdRole == item.Id).ToList().Count > 0 ? "checked" : "")></td>
            <td>@item.Ten</td>
            <td class="text-center">
                @if (item.Id != Constants.QuyenAdmin)
                {
                    <a class="btn btn-outline-primary waves-effect waves-light btn-xs" onclick="ThemMoi(@item.Id)" title="Cập nhật quyền"><i class="ri-edit-2-line"></i></a>
                    <a class="btn btn-outline-warning waves-effect waves-light btn-xs" title="Xóa quyền" onclick="Xoa(@item.Id)"><i class="ri-delete-bin-line"></i></a>
                }
            </td>
        </tr>
    }
}