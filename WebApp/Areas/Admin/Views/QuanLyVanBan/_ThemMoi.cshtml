
@{
    ViewBag.Title = "_ThemMoi";
    Layout = null;
    var DanhSachLoaiVanBan = ViewBag.DanhSachLoaiVanBan;
}
<input type="hidden" value="" id="AnhDaiDienTM" />
<div class="row">
    <div class="panel" style="margin-top: 10px !important;">
        <div class="panel-body">
            <div style="padding: 10px;">
                <div class="row">
                    <div class="col-lg-6 col-md-6 col-sm-6  mb-3">
                        <div class="form-group">
                            <label>Tiêu đề<span class="text-danger">(*)</span></label>
                            <input type="text" class="form-control" placeholder="" id="txtTieuDeThemMoi" value="">
                        </div>
                    </div>
                    <div class="col-lg-6 col-md-6 col-sm-6  mb-3">
                        <div class="form-group">
                            <label>File<span class="text-danger">(*)</span></label>
                            <div class="input-group">
                                <input type="text" class="form-control" id="txtFileThemMoi">
                                <button class="btn btn-outline-primary" onclick="ChonFileThemMoi()">Chọn</button>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-6 col-md-6 col-sm-6  mb-3">
                        <div class="form-group">
                            <label>Ngày phát hành<span class="text-danger">(*)</span></label>
                            <div class="input-group">
                                <input type="text" class="form-control" style="padding: 5px 14px;" placeholder="" id="txtNgayPhatHanhTM" value="@DateTime.Now.ToString("dd-MM-yyyy HH:mm")">
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-6 col-md-6 col-sm-6  mb-3">
                        <div class="form-group">
                            <label>Chuyên mục<span class="text-danger">(*)</span></label>
                            <select class="form-control" id="slChuyenMucTM">
                                <option value=""></option>
                                @if (DanhSachLoaiVanBan != null)
                                {
                                    foreach (var item in DanhSachLoaiVanBan)
                                    {
                                        <option value="@item.Id">@item.Ten</option>
                                    }
                                }
                            </select>
                        </div>
                    </div>
                    @*<div class="col-lg-6 col-md-6 col-sm-12  mb-3">
                            <div>
                                <label class="form-label">Ảnh đại diện<span class="text-danger">(*)</span>  <a class="btn btn-outline-primary waves-effect waves-light btn-xs" onclick="ChonAnhDaiDienThemMoi()" title="Chọn"><i class="ri-add-line"></i></a></label>
                                <div class="dropzoneAnhDaiDien" id="dropzoneAnhDaiDienThemMoi">
                                    <div style="padding: 50px;">Ảnh đại điện</div>
                                </div>
                            </div>
                        </div>*@
                    <div class="col-lg-12 col-md-12 col-sm-12  mb-3  dp-flex">
                        <div class="form-group w-100">
                            <label>Nội dung</label>
                            <textarea id="NoiDungThemMoi"></textarea>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>
<script>
    $("#slChuyenMucTM").select2({
        dropdownParent: $('#ModelThemMoi'),
        placeholder: "Chuyên mục",
        allowClear: true
    })
    $("#txtNgayPhatHanhTM").flatpickr({
        static: true,
        enableTime: true,
        dateFormat: "d-m-Y H:i",
    });

    CKEDITOR.replace("NoiDungThemMoi");
    var UrlAnhDaiDienThemMoi = "";
    function ChonAnhDaiDienThemMoi() {
        var finder = new CKFinder();
        finder.selectActionFunction = function (url) {
            UrlAnhDaiDienThemMoi = url;
            $("#dropzoneAnhDaiDienThemMoi").empty();
            $("#dropzoneAnhDaiDienThemMoi").html(`<img src="${url}"/>`);
            $("#dropzoneAnhDaiDienThemMoi").addClass("dropSua");
        }
        finder.popup();
    }

    function ChonFileThemMoi() {
        var finder = new CKFinder();
        finder.selectActionFunction = function (url) {
            debugger
            $("#txtFileThemMoi").val(url);
        }
        finder.popup();
    }

    function ThemMoiLuu() {
        if ($("#txtTieuDeThemMoi").val() == "") {
            ToastMessage("Lỗi", "Không được để trống tiêu đề", "error");
            return;
        }
        if ($("#slChuyenMucTM").val() == "") {
            ToastMessage("Lỗi", "Không được để trống chuyên mục", "error");
            return;
        }
        if ($("#txtFileThemMoi").val() == "") {
            ToastMessage("Lỗi", "Không được để trống file", "error");
            return;
        }
        //if (UrlAnhDaiDienThemMoi == "") {
        //    ToastMessage("Lỗi", "Không được để trống ảnh đại diện", "error");
        //    return;
        //}
        if ($("#txtNgayPhatHanhTM").val() == "") {
            ToastMessage("Lỗi", "Không được để trống ngày phát hành", "error");
            return;
        }
        Swal.fire({
            title: '',
            text: "Chắc chắn lưu văn bản?",
            icon: 'question',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Chắc chắn',
            cancelButtonText: 'Thoát'
        }).then((result) => {
            if (result.isConfirmed) {
                loading();
                var requestModel = {
                    Title: $("#txtTieuDeThemMoi").val(),
                    File: $("#txtFileThemMoi").val(),
                    Content: CKEDITOR.instances.NoiDungThemMoi.getData(),
                    Image: /*UrlAnhDaiDienThemMoi*/"",
                    NgayPhatHanh: moment($("#txtNgayPhatHanhTM").val(), "DD-MM-YYYY HH:mm").format('YYYY-MM-DD HH:mm'),
                    IdCategory: $("#slChuyenMucTM").val()
                }

                $.post("/Admin/QuanLyVanBan/ThemMoi", { "requestModel": requestModel }, function (data) {
                    if (data.icon == "success") {
                        Message('', data.message, data.icon);
                        $("#ModelThemMoi").modal("hide");
                    }
                    else {
                        Message('', data.message, data.icon);
                    }
                    table.ajax.reload(null, false);
                    offLoading();
                });
            }
        })
    }


</script>