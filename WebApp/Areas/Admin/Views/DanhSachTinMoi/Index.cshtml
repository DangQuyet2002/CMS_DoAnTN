<style>
    .swal2-deny {
        background-color: #197e7e;
    }
</style>
<div class="row">
    <div class="col-12">
        <div class="page-title-box d-sm-flex align-items-center justify-content-between">
            <h4 class="mb-sm-0">Danh sách tin mới</h4>

            <div class="page-title-right">
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item"><a href="javascript: void(0);">Quản trị bài viết</a></li>
                    <li class="breadcrumb-item active">Danh sách tin mới</li>
                </ol>
            </div>

        </div>
    </div>
</div>

<div class="row">
    <div class="col-xl-12" id="card-none1">
        <div class="card" id="invoiceList">
            <div class="card-header border-0">
                <div class="d-flex align-items-center">
                    <h5 class="card-title mb-0 flex-grow-1">Danh sách bài viết</h5>
                </div>
            </div>
            <div class="card-body bg-soft-light border border-dashed border-start-0 border-end-0">
                <div class="row g-3">
                    <div class="col-xxl-3 col-sm-12">
                        <div class="form-group">
                            <div class="form-group">
                                <select class="form-control slTrangThai" id="slCategory" onchange="TimKiemBaiViet()">
                                    <option value=""></option>
                                    @Html.Raw(ViewBag.optionSelected)
                                </select>

                            </div>
                        </div>
                    </div>
                    <div class="col-xxl-3 col-sm-12">
                        <div class="form-group">
                            <div class="form-group">
                                <input type="text" class="form-control" placeholder="Tiêu đề" id="txtTieuDe" value="" onchange="TimKiemBaiViet()">
                            </div>
                        </div>
                    </div>
                    <div class="col-xxl-3 col-sm-12 dp-flex">
                        <div class="form-group">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="ckHienThiTinMoi" onclick="TimKiemBaiViet()">
                                <label class="form-check-label" for="ckHienThiTinMoi">
                                    Hiển thị tin mới
                                </label>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <table id="DanhSachBaiViet" class="display nowrap" style="width:100%">
                </table>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script>


        function TimKiemBaiViet() {
            table.ajax.reload(null, false);
        }

        $(document).ready(function () {
            GetData();
        });

        $("#slTrangThai").select2({
            placeholder: "Trạng thái",
            allowClear: true
        })
        $("#slCategory").select2({
            placeholder: "Chuyên mục",
            allowClear: true
        })
