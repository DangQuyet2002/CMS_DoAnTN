        //var table = null;
        $("#jstree-treeChuyenMuc").bind("changed.jstree", function (e, data) {
            debugger;
            var Json = JSON.parse(data.node.id);
            CategoryID = Json.id;
            table.ajax.reload();
        });
        var CategoryID = null;
        function GetData() {

            table = $.fn.initDataTable('#DanhSachBaiViet', {
                serverSide: true,
                searching: false,
                lengthMenu: [50],
                scrollX: true,
                scrollY: true,
                columnDefs: [
                    { width: 50, targets: 0 },
                    { className: "dt-center", targets: [1, 2, 3] }
                ],
                preDrawCallback: function () {
                    loading()
                },
                columns: [

                    { "data": "Title", title: "Tiêu đề" },
                    { "data": "NumberViewer", "className": 'dt-body-center', title: "Lượt view" },
                    {
                        "data": "CreatedAt", "className": 'dt-body-center', title: "Ngày tạo", "render": function (data) {
                            if (data != null) {
                                return moment(data).format("DD/MM/YYYY");
                            }
                            return "";
                        }
                    },
                    {
                        "data": "IsTinMoi", title: "Tin mới", "className": 'dt-body-center', "render": function (data, type, row, meta) {
                            if (data) {
                                return `<input class="form-check-input" type="checkbox" checked onclick="CapNhatTinTucMoi(0,${row.ID})">`;
                            }
                            return `<input class="form-check-input" type="checkbox"  onclick="CapNhatTinTucMoi(1,${row.ID})">`;
                        }
                    }
                ],
                ajax: {
                    url: "/Admin/TKGDDuyetBai/DanhSachBaiViet",
                    type: "post",
                    data: (params) => {
                        params.Title = $("#txtTieuDe").val();
                        params.CategoryID = $("#slCategory").val();
                        params.IsActive = 1;
                        params.IsTinMoi = $("#ckHienThiTinMoi").is(":checked") == true ? 1 : 0;
                    }
                },
                drawCallback: function () {
                    offLoading();
                },
                initComplete: function (dt) {
                    //offloading();
                    if (dt.type == "error") {
                        showErrorToast("Thất bại", dt.message, dt.type);
                    }
                }
            });

        }


        function CapNhatTinTucMoi(TrangThai, Id) {
            var requestModel = {
                IsTinMoi: TrangThai,
                ID: Id
            }
            $.post("/Admin/DanhSachTinMoi/CapNhatTinTucMoi", { "requestModel": requestModel }, function (data) {
                if (data.icon == "success") {
                    ToastMessage("Thành công", data.message, data.icon);
                }
                else {
                    ToastMessage("Lỗi", data.message, data.icon);
                }
                table.ajax.reload(null, false);
                offLoading();
            });
        }
    </script>
}