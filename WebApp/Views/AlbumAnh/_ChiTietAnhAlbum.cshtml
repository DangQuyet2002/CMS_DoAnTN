@{
    Layout = null;
    var ChiTiet = ViewBag.ChiTiet;
}
<style>
    .carousel-caption {
        position: absolute;
         right: 0; 
        bottom: 0;
         left: 0; 
        padding-top: 1.25rem;
        padding-bottom: 1.25rem;
        color: #fff;
        text-align: center;
    }
</style>
<div class="live-preview">
    <div id="carouselImage" class="carousel" data-bs-ride="carousel">
        <div class="carousel-inner" role="listbox">

            @if (ChiTiet.DanhSachAnh != null)
            {
                foreach (var itemAnh in ChiTiet.DanhSachAnh)
                {

                    <div class="carousel-item @(itemAnh.Id==ViewBag.IdAnh?"active":"")">
                        <img src="@itemAnh.FileImage" alt="@itemAnh.MoTa" class="card-img-top img-fluid">
                        <div class="carousel-caption text-white-50" style="background-color: rgb(0 0 0 / 40%);">
                            <h5 class="text-white">@itemAnh.MoTa</h5>
                        </div>
                    </div>
                }
            }


