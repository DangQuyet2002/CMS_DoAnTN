        function DangNhap_TK() {
            if ($("#txtTaiKhoanDN").val() == "") {
                ToastMessage("Lỗi", "Không được để trống tài khoản", "error");
                return;
            }

            if ($("#txtMatKhauDN").val() == "") {
                ToastMessage("Lỗi", "Không được để trống mật khẩu", "error");
                return;
            }

            var requestModel = {
                UserName: $("#txtTaiKhoanDN").val(),
                Password: $("#txtMatKhauDN").val()
            }
            $.post("/LogIn/DangNhapTK", { "requestModel": requestModel }, function (data) {
                if (data.type == "success") {
                    ToastMessage("Thành công", data.message, data.icon);
                    $("#IdNguoiDung").val(data.data.ID);
                    $("#ThongTinNDBinhLuan").html(data.data.UserName);
                    $("#loginModals").modal("hide");
                }
                else {
