@using Models
@{
    ViewBag.Title = "DoNam";
    Layout = "~/Views/Shared/_LayoutCommon.cshtml";
}
<link href="~/Content/ControllerCss/Home.css" rel="stylesheet" />
<link href="~/Content/ControllerCss/HomeProduct.css" rel="stylesheet" />
<section id="content">

    <div class="content-wrap">

        <h4 style="margin-left: 8%;margin-bottom: 2.5rem"><a href="@Url.Action("Index","Home")">Trang Chủ / </a> <a >Thời Trang Nam</a></h4>
        <div class="container clearfix">

            <!-- Portfolio Filter
    ============================================= -->
            <ul id="portfolio-filter" class="portfolio-filter clearfix">
                <li class="activeFilter"><a href="#" data-filter="*">Show All</a></li>
                <li><a href="#" data-filter=".pf-T_shirt">Áo Thun</a></li>
                <li><a href="#" data-filter=".pf-shirt">Áo Sơ Mi</a></li>
                <li><a href="#" data-filter=".pf-Sweater">Áo Sweater</a></li>
                <li><a href="#" data-filter=".pf-Jean">Quần Jean</a></li>
                <li><a href="#" data-filter=".pf-Trousers">Quần Âu</a></li>
                <li><a href="#" data-filter=".pf-Sort">Quần Sort</a></li>

            </ul>
            <div class="clear"></div>
            <div id="DoNamLoad">

            </div>
            
        </div>

    </div>

</section>
@section scripts {
    <script>
            $(document).ready(function () {
                LoadPage1(1);
            })

        function LoadPage1(start) {
            var requestModel = {
                start: start,
            }
            $("#DoNamLoad").load("/DanhSachSP/_DSDoNam", { "requestModel": requestModel }, function (data) {
            })
        }
    </script>
} 