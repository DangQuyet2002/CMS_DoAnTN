    <script>
        function ToastMessage(title, message, type) {
            toast({
                title: title,
                message: message,
                type: type,
                duration: 5000
            });
        }
        function DangNhap() {
            debugger
            if ($("#username").val() == "") {
                ToastMessage("Lỗi", "Không được để trống tài khoản", "error");
                return;
            }
            if ($("#password-input").val() == "") {
                ToastMessage("Lỗi", "Không được để trống mật khẩu", "error");
                return;
            }

            var requestModel = {
                UserName: $("#username").val(),
                Password: $("#password-input").val()
            }
            debugger
            $.post("/LogIn/DangNhapTK", { "requestModel": requestModel }, function (data) {
                if (data.type == "success") {
                    debugger
                    if (data.data.ID == 0) {
                        ToastMessage("Lỗi", "Thông tin tài khoản mật khẩu không chính xác", "error");
                    }
                    else {
                        ToastMessage("Thông báo", "Đăng nhập thành công", "success");
                        window.location.href = '/Home/Index'
                    }
                }
                else {
                    ToastMessage("Lỗi", data.message, data.icon);
                }

            });
        }

        function DangKy_TK() {
            debugger
            var taiKhoan = $("#txtTaiKhoanDK").val();
            var normalizedTaiKhoan = taiKhoan.normalize("NFD").replace(/[\u0300-\u036f]/g, ""); // Loại bỏ các dấu thanh

            var regex = /^[^\s.,!?̣́̀̂̉̃]+$/; // Biểu thức chính quy kiểm tra không cho phép dấu cách và các dấu câu, dấu thanh

            if (taiKhoan === "") {
                ToastMessage("Lỗi", "Không được để trống tài khoản", "error");
                return;
            }
            if (!regex.test(normalizedTaiKhoan)) {
                ToastMessage("Lỗi", "Tên đăng nhập không chứa các kí tự đặc biệt", "error");
                return;
            }
            
            if ($("#txtEmailDK").val() == "") {
                ToastMessage("Lỗi", "Không được để trống email", "error");
                return;
            }
            if ($("#txtSDT").val() == "") {
                ToastMessage("Lỗi", "Không được để trống số điện thoại", "error");
                return;
            }
            if ($("#txtMatKhauDK").val() == "") {
                ToastMessage("Lỗi", "Không được để trống mật khẩu", "error");
                return;
            }
            if ($("#txtMatKhauNL").val() == "") {
                ToastMessage("Lỗi", "Không được để trống mật khẩu", "error");
                return;
            }
            if ($("#txtMatKhauNL").val() != $("#txtMatKhauNL").val()) {
                ToastMessage("Lỗi", "mật khẩu không giống nhau", "error");
                return;
            }
            var requestModel = {
                UserName: $("#txtTaiKhoanDK").val(),
                Email: $("#txtEmailDK").val(),
                Phone: $("#txtSDT").val(),
                Password: $("#txtMatKhauDK").val()
            }
            $.post("/SinUp/DangKyTK", { "requestModel": requestModel }, function (data) {
                if (data.type == "success") {
                    ToastMessage("Thành công", data.message, data.icon);
                    $("#IdNguoiDung").val(data.data.ID);
                    $("#signupModals").modal("hide");
                    $("#loginModals").modal("show");
                }
                else {
                    ToastMessage("Thành công", data.message, data.icon);
                }
            });
        }
