@using Models;
@{
    ViewBag.Title = "_DanhSachBL";
    var DanhSachBinhLuan = ViewBag.DanhSachBinhLuan as List<tbl_CommentModel>;
    Layout = null;
}

@if (DanhSachBinhLuan.Count > 0)
{
    <div class="card-body">
        <div data-simplebar style="max-height: 300px;" class="px-3 mx-n3 mb-2">
            @foreach (var item in DanhSachBinhLuan)
            {
                <div class="d-flex mb-4 border-bottom-cm">
                    <div class="flex-shrink-0">
                        @if (string.IsNullOrEmpty(item.Image))
                        {
                            <img src="~/Content/Image/Banner/images.png" alt="" class="avatar-xs rounded-circle" />
                        }
                        else
                        {
                            <img src="@item.Image" alt="" class="avatar-xs rounded-circle" />
                        }
                    </div>
                    <div class="flex-grow-1 ms-3">
                        <h5 class="fs-13 "><span class="font-w600">@item.UserName</span><small class="text-muted ms-2">@(item.CreatedDate!=null?((DateTime)item.CreatedDate).ToString("dd-MM-yyyy"):"")</small></h5>
                        <p class="text-muted">@item.NoiDung</p>
                    </div>
                </div>
            }
        </div>
    </div>
}