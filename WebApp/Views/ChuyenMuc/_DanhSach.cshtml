
@{
    ViewBag.Title = "_DanhSach";
    var DanhSachBaiViet = ViewBag.DanhSachBaiViet;
    Layout = null;
}
@if (DanhSachBaiViet.Count > 0)
{
    <div class="row " id="DataChuyenMuc">
        @foreach (var itemBV in DanhSachBaiViet)
        {
            <div class="col-xl-12 col-lg-12 col-sm-12 p-0 border-bottom-cm">
                <div class="card-body">
                    <div class="d-sm-flex">
                        @{
                            var Url1 = "/" + Utils.convertToUnSign2(itemBV.Title).Replace(" ", "_") + "_bv-" + itemBV.ID + ".htm";
                            if (!string.IsNullOrEmpty(itemBV.TuKhoaSeo))
                            {
                                Url1 = "/" + Utils.convertToUnSign2(itemBV.TuKhoaSeo).Replace(" ", "_") + "_bv-" + itemBV.ID + ".htm";
                            }
                        }
                        <div class="flex-shrink-0  width-TTMoi">
                            <img src="@itemBV.Thumnail" alt="" width="115" class="rounded-1 img-new-duoi-banner ">
                        </div>
                        <div class="flex-grow-1 ms-sm-4 mt-3 mt-sm-0">
                            <h4 class="title-new"><a href="@Url1" class="text-black">@itemBV.Title</a></h4>
                            <p class="text-success fs-12 mb-1">@(itemBV.NgayPhatHanh!=null?((DateTime)itemBV.NgayPhatHanh).ToString("dd-MM-yyyy HH:mm") :"")</p>
                            <p class="wraptext-new-height article-excerpt"><a href="javascript:void(0);">@itemBV.ShortDescription</a></p>
                        </div>
                    </div>
                </div>
            </div>

        }
    </div>
}
